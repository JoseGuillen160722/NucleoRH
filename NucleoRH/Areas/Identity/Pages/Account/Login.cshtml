    <link rel="stylesheet" href="~/css/login.css">

    



<div class="row m-0 p-0 h-100">
    <nav class="navbar nav_no_auth position-absolute w-100 navbar-expand-md">
      <div class="container-fluid">
        <a href="/">
          <img class="navbar-brand nd-img mx-4" src="https://files.nucleodediagnostico.mx/img/ND.png" alt="ND">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
          <ul class="navbar-nav me-auto mx-4 pt-1 mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="http://web.nucleodediagnostico.mx/">
                Web ND
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="http://web.nucleodediagnostico.mx/aviso-y-politica-de-privacidad/">
                Aviso de Privacidad
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="col-xl-6 col-lg-7 col-md-10 mx-auto gf">
        <div class="row shadow hl-50">
            <div class="col-lg-6 imagennd p-0">

            </div>
            <div class="col-lg-6 text-center f bg-white">
                <div class="s px-5">
                    <h4 class="login-h">Inicio de sesión de ND Capital Humano.</h4>
                    <div class="container">
                <form id="account" method="post" class="m-0">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating mb-4">
                    
                    <input asp-for="Input.UserName" class="form-control" placeholder="Número de nómina" id="Username" required/>
                    <label asp-for="Input.UserName" for="Username"></label>
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4">
                    
                    <input asp-for="Input.Password" class="form-control" placeholder="Contraseña" id="Password" required/>
                    <label asp-for="Input.Password" for="Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block ">Iniciar sesión</button>
                </div>
                @*<div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crea una nueva cuenta de usuario</a>
                    </p>
                </div>*@
            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
      

                

             
    

@model IEnumerable<NucleoRH.Models.CatEmpleados>
@{ ViewData["Title"] = "Empleados"; }

<style>

    #table3 thead tr th {
        position: sticky;
        top: 0;
        z-index: 10;
        background-color: #ffffff;

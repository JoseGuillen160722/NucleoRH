<div class="dt-card dt-card__full-height">
    <div class="dt-card__header" style="justify-self">
        <h4 class="mb--15">Empleados</h4>
        <div>
            <button class="btn btn-success" data-toggle="modal" data-target="#Add" id="btnAgregarEmpleado">Agregar Empleado</button>
        </div>
    </div>
    <div class="card-body" style="overflow:scroll">       
        <table class="table" id="table3">
            <thead>
                <tr>
                    
                    <th scope="col">Número de Empleado</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido Paterno</th>
                    <th scope="col">Apellido Materno</th>
                    <th scope="col">Puesto</th>
                    <th scope="col">Sucursal</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ins in ViewBag.Empleados)
               {
                   <tr>
                      
                       <td>@ins.EmpNumero</td>
                       <td>@ins.EmpNombre</td>
                       <td>@ins.EmpPaterno</td>
                       <td>@ins.EmpMaterno</td>
                       <td>@ins.EmpPuesto.PuestoDescripcion</td>
                       <td>@ins.EmpSucu.SucuNombre</td>
                       <td>
            <a href="" data-toggle="tooltip" data-placement="top" title="Detalles" onclick="OpenModalDetails(@ins.EmpId)"><i class="material-icons text-info ">search</i></a>
            <a href="" data-toggle="tooltip" data-placement="top" title="Editar" onclick="OpenModalEdit(@ins.EmpId)"><i class="material-icons text-warning EditarEmpleado" >edit</i></a>
            <a href="" data-toggle="tooltip" data-placement="top" title="Eliminar" onclick="DeleteEmpleados(@ins.EmpId)"><i class="material-icons text-danger EliminarEmpleado">delete</i></a>
            <a href="" data-toggle="tooltip" data-placement="top" title="Generar Credenciales" onclick="OpenModalCredenciales(@ins.EmpId)"><i class="material-icons text-orange AgregarCredenciales">login</i></a>
                       </td>

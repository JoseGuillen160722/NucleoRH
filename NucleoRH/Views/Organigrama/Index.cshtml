@model IEnumerable<NucleoRH.Models.CatPuestos>
@{ ViewData["Title"] = "Organigrama"; }

<link rel="stylesheet" href="~/css/main.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css">

<div class="dt-card dt-card__full-height">
    <div class="dt-card__header" style="justify-self">
        <h4 class="mb--15">Organigrama</h4>
    </div>
    <div class="card-body" style="overflow:auto; width:auto">       
        <div class="col-sm-12">
        <label class="col-sm-2 col-form-label">Puesto desde el cual comenzará el organigrama
            <br />
            ("Area: Puesto - Departamento")
        </label>
    <select class="form-control col-sm-3 col-form-label" asp-items="ViewBag.Puestos" id="PuestoId" name="PuestoId" onchange="SeleccionarJerarquia()">
    <option selected disabled value="">Seleccione una opción</option>
    </select>
    </div>
     <div id="my_tree"></div>
    </div>
</div>


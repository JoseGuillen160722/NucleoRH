@model IEnumerable<NucleoRH.Models.CatPeriodos>
@{ ViewData["Title"] = "Periodos"; }

<style>

    #table3 thead tr th {
        position: sticky;
        top: 0;
        z-index: 10;
        background-color: #ffffff;
    }

    .table-responsive {
        height: 200px;
        overflow: scroll;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.12/js/i18n/defaults-es_ES.min.js"></script>

<div class="dt-card dt-card__full-height">
    <div class="dt-card__header" style="justify-self">
        <h4 class="mb--15">Periodos</h4>
        <div>
            <button class="btn btn-success" data-toggle="modal" data-target="#Add" id="btnAgregarPeriodo">Agregar Periodo</button>
        </div>
    </div>
    <div class="card-body">       
        <table class="table" id="table3">
            <thead>
                <tr>
                    <th scope="col">Número de periodo</th>
                    <th scope="col">Desde</th>
                    <th scope="col">Hasta</th>
                    @*<th scope="col">Estado periodo</th>*@
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ins in ViewBag.Periodos)
               {
                   <tr>
                       <td>@ins.PerNum</td>
                       <td>@ins.PerFechaDesde.ToShortDateString()</td>
                       <td>@ins.PerFechaHasta.ToShortDateString()</td>
                       @*<td>@ins.PerCerrado</td>*@
                       <td>
            <a href="" data-toggle="tooltip" data-placement="top" title="Editar" onclick="OpenModalEdit(@ins.PerId)"><i class="material-icons text-warning EditarPeriodos">edit</i></a>
            <a href="" data-toggle="tooltip" data-placement="top" title="Eliminar" onclick="DeletePeriodo(@ins.PerId)"><i class="material-icons text-danger EliminarPeriodos">delete</i></a>
                       </td>
                   </tr>
               }
            </tbody>
        </table>
    </div>
</div>

@*Agregar YA MOSTRANDO EL MODAL*@
<div class="modal fade" id="Add" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" style="max-width:30em;" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agregar Periodo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="AddPeriodo" asp-controller="Periodos" asp-action="Add" method="POST">
                    <div class="form-group row">
                        
                        <div class="col-sm-10 mx-auto">
                            <label class="col-sm-2 col-form-label">Número de periodo</label><br />
                            <input type="number" class="form-control col-sm-10 col-form-label" name="PerNum" id="PerNum" maxlength="50" placeholder="Número de periodo" autocomplete="off" required>
                        </div>
                        <div class="col-sm-10 mx-auto">
                            <label class="col-sm-2 col-form-label">Desde:</label><br />
                            <input type="date" class="form-control col-sm-10 col-form-label" name="PerFechaDesde" id="PerFechaDesde"  autocomplete="off" required>
                        </div>
                        <div class="col-sm-10 mx-auto">
                            <label class="col-sm-2 col-form-label">Hasta:</label><br />
                            <input type="date" class="form-control col-sm-10 col-form-label" name="PerFechaHasta" id="PerFechaHasta"  autocomplete="off" required>
                        </div>
                        </div>
                    <div class="form-group float-right">
                        <button type="button" id="btnAddPeriodo" onclick="AddPeriodo()" class="btn btn-success">Agregar</button>
                        <button data-dismiss="modal" class="btn btn-danger">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@*Editar FORMULARIO YA EN MODAL*@
<div class="modal fade" id="Edit" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" style="max-width:45em;" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar Periodo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="EditPeriodo" asp-controller="Periodos" asp-action="EditPeriodo" method="POST">
                    <input type="hidden" />
                    <input type="hidden" id="Id" name="Id" />
                    <div class="form-group row">
                        <div class="col-sm-10 mx-auto">
                            <label class="col-sm-2 col-form-label">Número de periodo</label><br />
                            <input type="number" class="form-control col-sm-10 col-form-label" name="PerNumE" id="PerNumE" maxlength="50" placeholder="Número de periodo" autocomplete="off" required>
                        </div>
                        <div class="col-sm-10 mx-auto">
                            <label class="col-sm-2 col-form-label">Desde:</label><br />
                            <input type="date" class="form-control col-sm-10 col-form-label" name="PerFechaDesdeE" id="PerFechaDesdeE"  autocomplete="off" required>
                        </div>
                        <div class="col-sm-10 mx-auto">
                            <label class="col-sm-2 col-form-label">Hasta:</label><br />
                            <input type="date" class="form-control col-sm-10 col-form-label" name="PerFechaHastaE" id="PerFechaHastaE"  autocomplete="off" required>
                        </div>
                    </div>
                    <div class="form-group float-right">
                        <button type="button" id="btnEditPeriodo" onclick="EditPeriodo()" class="btn btn-success">Guardar</button>
                        <button data-dismiss="modal" class="btn btn-danger">Cancelar</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

